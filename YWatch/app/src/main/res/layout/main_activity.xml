<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:spinnerutil="http://schemas.android.com/apk/res/com.smartwatch.ywatch"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.mycompany.myapp.MainActivity">

	<LinearLayout
		android:id="@+id/main_activityLinearLayout"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:background="?backimage">

		<include
			layout="@layout/main_title"/>

		<android.support.v7.widget.CardView
			xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/bluecard"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			android:layout_width="326dp"
			android:layout_height="40dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="4dp"
			android:transitionName="bluecard"
			android:layout_marginTop="50dp"
			android:layout_marginLeft="17dp">

			<RelativeLayout
				android:id="@+id/imageview"
				android:layout_width="326dp"
				android:layout_height="40dp">

				<TextView
					android:id="@+id/text_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:ellipsize="marquee"
					android:gravity="center_horizontal|center"
					android:fitsSystemWindows="true"
					android:clipToPadding="true"
					android:singleLine="true"
					android:text="蓝牙"
					android:textColor="@color/textcolor"
					android:textSize="15dp"/>

				<ImageView
					android:id="@+id/bluetoothimage"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:src="@drawable/bluetooth"
					android:layout_marginTop="2dp"/>

				<Button
					android:id="@+id/mybluetooth"
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:background="@drawable/bluenotifi"
					android:layout_gravity="right"
					android:layout_alignParentRight="true"
					android:layout_marginTop="7dp"
					android:layout_marginRight="5dp"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/noticard"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			android:layout_width="326dp"
			android:layout_height="40dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="4dp"
			android:transitionName="noticard"
			android:layout_marginTop="60dp"
			android:layout_marginLeft="17dp">

			<RelativeLayout
				android:id="@+id/imageview"
				android:layout_width="326dp"
				android:layout_height="40dp">

				<ImageView
					android:id="@+id/notificationimage"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/notification"/>

				<TextView
					android:id="@+id/text_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:ellipsize="marquee"
					android:gravity="center_horizontal|center"
					android:fitsSystemWindows="true"
					android:clipToPadding="true"
					android:singleLine="true"
					android:text="通知"
					android:textColor="@color/textcolor"
					android:textSize="15dp"/>

				<Button
					android:id="@+id/mynotification"
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:background="@drawable/bluenotifi"
					android:layout_alignParentRight="true"
					android:layout_marginTop="7dp"
					android:layout_marginRight="5dp"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			android:layout_width="326dp"
			android:layout_height="40dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="4dp"
			android:layout_marginTop="60dp"
			android:layout_marginLeft="17dp">

			<RelativeLayout
				android:id="@+id/imageview"
				android:layout_width="326dp"
				android:layout_height="40dp">

				<TextView
					android:id="@+id/text_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:ellipsize="marquee"
					android:gravity="center_horizontal|center"
					android:fitsSystemWindows="true"
					android:clipToPadding="true"
					android:singleLine="true"
					android:text="心率"
					android:textColor="@color/textcolor"
					android:textSize="15dp"/>

				<ImageView
					android:id="@+id/heartimage"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:src="@drawable/pulse"
					android:layout_marginTop="2dp"/>

				<Button
					android:id="@+id/finger"
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:background="@drawable/bluenotifi"
					android:layout_gravity="right"
					android:layout_alignParentRight="true"
					android:transitionName="xinlvcard"
					android:layout_marginTop="7dp"
					android:layout_marginRight="5dp"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

	</LinearLayout>

</RelativeLayout>

